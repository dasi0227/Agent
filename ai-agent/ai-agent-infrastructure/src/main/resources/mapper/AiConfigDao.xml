<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiConfigDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiConfig">
        <result column="client_id" property="clientId"/>
        <result column="config_type" property="configType"/>
        <result column="config_value" property="configValue"/>
        <result column="config_param" property="configParam"/>
        <result column="config_status" property="configStatus"/>
    </resultMap>

    <select id="queryByClientId" parameterType="java.lang.String" resultMap="dataMap">
        SELECT client_id,
               config_type,
               config_value,
               config_param,
               config_status
        FROM ai_config
        WHERE client_id = #{clientId}
    </select>

    <select id="queryClientIdListByConfigType" resultType="java.lang.String">
        SELECT client_id
        FROM ai_config
        WHERE config_type = #{configType}
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiConfigDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiConfig">
        <result column="source_type" property="sourceType"/>
        <result column="source_id" property="sourceId"/>
        <result column="target_type" property="targetType"/>
        <result column="target_id" property="targetId"/>
        <result column="config_param" property="configParam"/>
        <result column="config_status" property="configStatus"/>
    </resultMap>

    <select id="queryBySource" parameterType="java.lang.String" resultMap="dataMap">
        SELECT source_type,
               source_id,
               target_type,
               target_id,
               config_param,
               config_status
        FROM ai_config
        WHERE source_type = #{sourceType}
          AND source_id = #{sourceId}
    </select>

    <select id="queryIdListByTargetType" resultType="java.lang.String">
        SELECT source_id
        FROM ai_config
        WHERE target_type = #{targetType}
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiFlowDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiFlow">
        <result column="agent_id" property="agentId"/>
        <result column="client_id" property="clientId"/>
        <result column="client_type" property="clientType"/>
        <result column="flow_prompt" property="flowPrompt"/>
        <result column="flow_seq" property="flowSeq"/>
    </resultMap>

    <select id="queryByAgentId" parameterType="java.lang.String" resultMap="dataMap">
        select agent_id,
               client_id,
               client_type,
               flow_prompt,
               flow_seq
        from ai_flow
        WHERE agent_id = #{agentId}
        ORDER BY flow_seq
    </select>

    <update id="loadFlowPrompt">
        UPDATE ai_flow
        SET flow_prompt = #{flowPrompt}
        WHERE client_id = #{clientId}
    </update>
</mapper>

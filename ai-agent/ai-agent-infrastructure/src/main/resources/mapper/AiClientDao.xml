<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiClientDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiClient">
        <result column="client_id" property="clientId"/>
        <result column="client_name" property="clientName"/>
        <result column="client_desc" property="clientDesc"/>
        <result column="client_status" property="clientStatus"/>
    </resultMap>

    <select id="queryByClientId" resultMap="dataMap">
        SELECT
            client_id,
            client_name,
            client_desc,
            client_status
        FROM ai_client
        WHERE client_id = #{clientId}
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiApiDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiApi">
        <id column="id" property="id"/>
        <result column="api_id" property="apiId"/>
        <result column="api_base_url" property="apiBaseUrl"/>
        <result column="api_key" property="apiKey"/>
        <result column="api_completions_path" property="apiCompletionsPath"/>
        <result column="api_embeddings_path" property="apiEmbeddingsPath"/>
        <result column="api_status" property="apiStatus"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectByApiId" parameterType="java.lang.String" resultMap="dataMap">
        SELECT id,
               api_id,
               api_base_url,
               api_key,
               api_completions_path,
               api_embeddings_path,
               api_status,
               create_time,
               update_time
        FROM ai_api
        WHERE api_id = #{apiId}
    </select>

    <insert id="insertAiAPI" parameterType="com.dasi.infrastructure.persistent.po.AiApi">
        INSERT INTO ai_api (api_id,
                            api_base_url,
                            api_key,
                            api_completions_path,
                            api_embeddings_path,
                            api_status)
        VALUES (#{apiId},
                #{apiBaseUrl},
                #{apiKey},
                #{apiCompletionsPath},
                #{apiEmbeddingsPath},
                #{apiStatus})
    </insert>



</mapper>

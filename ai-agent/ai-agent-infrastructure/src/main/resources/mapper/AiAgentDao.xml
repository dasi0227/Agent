<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiAgentDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiAgent">
        <result column="agent_id" property="agentId"/>
        <result column="agent_name" property="agentName"/>
        <result column="agent_type" property="agentType"/>
        <result column="agent_desc" property="agentDesc"/>
        <result column="agent_status" property="agentStatus"/>
    </resultMap>

    <select id="queryAgentList" resultMap="dataMap">
        SELECT agent_id, agent_name, agent_type, agent_desc, agent_status
        FROM ai_agent
        WHERE agent_status = 1
    </select>

    <select id="queryAgentByAgentId" resultMap="dataMap">
        SELECT agent_id, agent_name, agent_type, agent_desc, agent_status
        FROM ai_agent
        WHERE agent_id = #{agentId}
    </select>

</mapper>

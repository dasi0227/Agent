<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">

    <contextName>logback</contextName>

    <!-- 日志输出路径 -->
    <property name="LOG_PATH" value="./log"/>

    <!-- ========= 开发环境降噪 ========= -->
    <springProfile name="dev">
        <logger name="com.zaxxer.hikari" level="ERROR"/>
        <logger name="org.redisson" level="ERROR"/>
        <logger name="io.netty.resolver.dns" level="ERROR"/>
        <logger name="org.springframework.amqp" level="ERROR"/>
        <logger name="org.springframework.boot.web.servlet.context" level="ERROR"/>
    </springProfile>

    <!-- ========= 转换规则 ========= -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <!-- ========= 控制台输出 ========= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-8.-8thread] %-5p %-40class{1} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========= 文件输出（按月滚动） ========= -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- 当前正在写的文件 -->
        <file>${LOG_PATH}/app.log</file>

        <!-- 按时间滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_PATH}/%d{yyyy-MM}/app.%d{yyyy-MM}.log
            </fileNamePattern>

            <!-- 最多保留 12 个月 -->
            <maxHistory>12</maxHistory>

            <!-- 超过 1GB 自动清理 -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-8.-8thread] %-5p %-40class{1} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========= INFO 级别输出 ========= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
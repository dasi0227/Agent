<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiApiDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiApi">
        <id column="id" property="id"/>
        <result column="api_id" property="apiId"/>
        <result column="api_base_url" property="apiBaseUrl"/>
        <result column="api_key" property="apiKey"/>
        <result column="api_completions_path" property="apiCompletionsPath"/>
        <result column="api_embeddings_path" property="apiEmbeddingsPath"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryByApiId" resultMap="dataMap">
        SELECT id,
               api_id,
               api_base_url,
               api_key,
               api_completions_path,
               api_embeddings_path,
               create_time,
               update_time
        FROM ai_api
        WHERE api_id = #{apiId}
    </select>

    <select id="page" resultMap="dataMap">
        SELECT id,
        api_id,
        api_base_url,
        api_key,
        api_completions_path,
        api_embeddings_path,
        create_time,
        update_time
        FROM ai_api
        <where>
            <if test="idKeyword != null and idKeyword != ''">
                AND api_id LIKE CONCAT('%', #{idKeyword}, '%')
            </if>
        </where>
        ORDER BY update_time DESC, id DESC
        <if test="offset != null and size != null">
            LIMIT #{offset}, #{size}
        </if>
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM ai_api
        <where>
            <if test="idKeyword != null and idKeyword != ''">
                AND api_id LIKE CONCAT('%', #{idKeyword}, '%')
            </if>
        </where>
    </select>

    <select id="queryById" resultMap="dataMap">
        SELECT id,
               api_id,
               api_base_url,
               api_key,
               api_completions_path,
               api_embeddings_path,
               create_time,
               update_time
        FROM ai_api
        WHERE id = #{id}
    </select>

    <select id="listApiId" resultType="java.lang.String">
        SELECT api_id
        FROM ai_api
    </select>

    <insert id="insert" parameterType="com.dasi.infrastructure.persistent.po.AiApi">
        INSERT INTO ai_api (api_id,
                            api_base_url,
                            api_key,
                            api_completions_path,
                            api_embeddings_path)
        VALUES (#{apiId},
                #{apiBaseUrl},
                #{apiKey},
                #{apiCompletionsPath},
                #{apiEmbeddingsPath})
    </insert>

    <update id="update" parameterType="com.dasi.infrastructure.persistent.po.AiApi">
        UPDATE ai_api
        <set>
            <if test="apiId != null">api_id = #{apiId},</if>
            <if test="apiBaseUrl != null">api_base_url = #{apiBaseUrl},</if>
            <if test="apiKey != null">api_key = #{apiKey},</if>
            <if test="apiCompletionsPath != null">api_completions_path = #{apiCompletionsPath},</if>
            <if test="apiEmbeddingsPath != null">api_embeddings_path = #{apiEmbeddingsPath},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE
        FROM ai_api
        WHERE id = #{id}
    </delete>
</mapper>

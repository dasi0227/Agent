<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IUserDao">

    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="role" property="role"/>
        <result column="user_status" property="userStatus"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryByUsername" parameterType="string" resultMap="dataMap">
        SELECT id, username, password, role, user_status, create_time, update_time
        FROM `user`
        WHERE username = #{username}
        LIMIT 1
    </select>

    <select id="page" resultMap="dataMap">
        SELECT id,
        username,
        password,
        role,
        user_status,
        create_time,
        update_time
        FROM `user`
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
        </where>
        ORDER BY update_time DESC, id DESC
        <if test="offset != null and size != null">
            LIMIT #{offset}, #{size}
        </if>
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM `user`
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
        </where>
    </select>

    <select id="queryById" resultMap="dataMap">
        SELECT id,
               username,
               password,
               role,
               user_status,
               create_time,
               update_time
        FROM `user`
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.dasi.infrastructure.persistent.po.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `user` (username,
                            password,
                            role,
                            user_status)
        VALUES (#{username},
                #{password},
                #{role},
                #{userStatus})
    </insert>

    <update id="update" parameterType="com.dasi.infrastructure.persistent.po.User">
        UPDATE `user`
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="role != null">role = #{role},</if>
            <if test="userStatus != null">user_status = #{userStatus},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="toggle">
        UPDATE `user`
        SET user_status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE
        FROM `user`
        WHERE id = #{id}
    </delete>
</mapper>

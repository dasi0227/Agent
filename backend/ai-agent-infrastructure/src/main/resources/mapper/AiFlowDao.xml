<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiFlowDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiFlow">
        <id column="id" property="id"/>
        <result column="agent_id" property="agentId"/>
        <result column="client_id" property="clientId"/>
        <result column="client_type" property="clientRole"/>
        <result column="flow_prompt" property="flowPrompt"/>
        <result column="flow_seq" property="flowSeq"/>
        <result column="flow_status" property="flowStatus"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryByAgentId" parameterType="java.lang.String" resultMap="dataMap">
        SELECT id,
               agent_id,
               client_id,
               client_role,
               flow_prompt,
               flow_seq,
               flow_status,
               create_time,
               update_time
        FROM ai_flow
        WHERE agent_id = #{agentId}
        ORDER BY flow_seq
    </select>

    <select id="queryAgentIdByClientId" resultType="java.lang.String">
        SELECT agent_id
        FROM ai_flow
        WHERE client_id = #{clientId}
    </select>

    <update id="loadFlowPrompt">
        UPDATE ai_flow
        SET flow_prompt = #{flowPrompt}
        WHERE client_id = #{clientId}
    </update>



</mapper>

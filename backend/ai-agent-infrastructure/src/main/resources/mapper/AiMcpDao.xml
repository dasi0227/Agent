<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiMcpDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiMcp">
        <id column="id" property="id"/>
        <result column="mcp_id" property="mcpId"/>
        <result column="mcp_name" property="mcpName"/>
        <result column="mcp_type" property="mcpType"/>
        <result column="mcp_config" property="mcpConfig"/>
        <result column="mcp_desc" property="mcpDesc"/>
        <result column="mcp_timeout" property="mcpTimeout"/>
        <result column="mcp_chat" property="mcpChat"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryByMcpId" parameterType="java.lang.String" resultMap="dataMap">
        SELECT id,
               mcp_id,
               mcp_name,
               mcp_type,
               mcp_config,
               mcp_desc,
               mcp_timeout,
               mcp_chat,
               create_time,
               update_time
        FROM ai_mcp
        WHERE mcp_id = #{mcpId}
    </select>

    <select id="queryByMcpIdList" parameterType="java.util.List" resultMap="dataMap">
        SELECT id,
        mcp_id,
        mcp_name,
        mcp_type,
        mcp_config,
        mcp_desc,
        mcp_timeout,
        mcp_chat,
        create_time,
        update_time
        FROM ai_mcp
        WHERE mcp_chat = 1 AND mcp_id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="queryChatMcpList" resultMap="dataMap">
        SELECT id,
               mcp_id,
               mcp_name,
               mcp_type,
               mcp_config,
               mcp_desc,
               mcp_timeout,
               mcp_chat,
               create_time,
               update_time
        FROM ai_mcp
        WHERE mcp_chat = 1
    </select>

    <select id="page" resultMap="dataMap">
        SELECT id,
               mcp_id,
               mcp_name,
               mcp_type,
               mcp_config,
               mcp_desc,
               mcp_timeout,
               mcp_chat,
               create_time,
               update_time
        FROM ai_mcp
        <where>
            <if test="idKeyword != null and idKeyword != ''">
                AND mcp_id LIKE CONCAT('%', #{idKeyword}, '%')
            </if>
            <if test="nameKeyword != null and nameKeyword != ''">
                AND mcp_name LIKE CONCAT('%', #{nameKeyword}, '%')
            </if>
        </where>
        ORDER BY update_time DESC, id DESC
        <if test="offset != null and size != null">
            LIMIT #{offset}, #{size}
        </if>
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM ai_mcp
        <where>
            <if test="idKeyword != null and idKeyword != ''">
                AND mcp_id LIKE CONCAT('%', #{idKeyword}, '%')
            </if>
            <if test="nameKeyword != null and nameKeyword != ''">
                AND mcp_name LIKE CONCAT('%', #{nameKeyword}, '%')
            </if>
        </where>
    </select>

    <select id="countAll" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM ai_mcp
    </select>

    <select id="queryById" resultMap="dataMap">
        SELECT id,
               mcp_id,
               mcp_name,
               mcp_type,
               mcp_config,
               mcp_desc,
               mcp_timeout,
               mcp_chat,
               create_time,
               update_time
        FROM ai_mcp
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.dasi.infrastructure.persistent.po.AiMcp">
        INSERT INTO ai_mcp (mcp_id,
                            mcp_name,
                            mcp_type,
                            mcp_config,
                            mcp_desc,
                            mcp_timeout,
                            mcp_chat)
        VALUES (#{mcpId},
                #{mcpName},
                #{mcpType},
                #{mcpConfig},
                #{mcpDesc},
                #{mcpTimeout},
                #{mcpChat})
    </insert>

    <update id="update" parameterType="com.dasi.infrastructure.persistent.po.AiMcp">
        UPDATE ai_mcp
        <set>
            <if test="mcpId != null">mcp_id = #{mcpId},</if>
            <if test="mcpName != null">mcp_name = #{mcpName},</if>
            <if test="mcpType != null">mcp_type = #{mcpType},</if>
            <if test="mcpConfig != null">mcp_config = #{mcpConfig},</if>
            <if test="mcpDesc != null">mcp_desc = #{mcpDesc},</if>
            <if test="mcpTimeout != null">mcp_timeout = #{mcpTimeout},</if>
            <if test="mcpChat != null">mcp_chat = #{mcpChat},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE
        FROM ai_mcp
        WHERE id = #{id}
    </delete>
</mapper>

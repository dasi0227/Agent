<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiMcpDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiMcp">
        <result column="mcp_id" property="mcpId"/>
        <result column="mcp_name" property="mcpName"/>
        <result column="mcp_type" property="mcpType"/>
        <result column="mcp_config" property="mcpConfig"/>
        <result column="mcp_desc" property="mcpDesc"/>
        <result column="mcp_timeout" property="mcpTimeout"/>
        <result column="mcp_chat" property="mcpChat"/>
        <result column="mcp_status" property="mcpStatus"/>
    </resultMap>

    <select id="queryByMcpId" parameterType="java.lang.String" resultMap="dataMap">
        SELECT mcp_id,
               mcp_name,
               mcp_type,
               mcp_config,
               mcp_desc,
               mcp_timeout,
               mcp_chat,
               mcp_status
        FROM ai_mcp
        WHERE mcp_id = #{mcpId}
    </select>

    <select id="queryByMcpIdList" parameterType="java.util.List" resultMap="dataMap">
        SELECT mcp_id,
        mcp_name,
        mcp_type,
        mcp_config,
        mcp_desc,
        mcp_timeout,
        mcp_chat,
        mcp_status
        FROM ai_mcp
        WHERE mcp_status = 1 AND mcp_chat = 1 AND mcp_id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="queryChatMcpList" resultMap="dataMap">
        SELECT mcp_id,
               mcp_name,
               mcp_type,
               mcp_config,
               mcp_desc,
               mcp_timeout,
               mcp_chat,
               mcp_status
        FROM ai_mcp
        WHERE mcp_status = 1 AND mcp_chat = 1
    </select>

</mapper>

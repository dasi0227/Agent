<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dasi.infrastructure.persistent.dao.IAiPromptDao">
    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.AiPrompt">
        <id column="id" property="id"/>
        <result column="prompt_id" property="promptId"/>
        <result column="prompt_name" property="promptName"/>
        <result column="prompt_content" property="promptContent"/>
        <result column="prompt_desc" property="promptDesc"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryByPromptId" parameterType="java.lang.String" resultMap="dataMap">
        SELECT id,
               prompt_id,
               prompt_name,
               prompt_content,
               prompt_desc,
               create_time,
               update_time
        FROM ai_prompt
        WHERE prompt_id = #{promptId}
    </select>

    <update id="loadPromptContent">
        UPDATE ai_prompt
        SET prompt_content = #{promptContent}
        WHERE prompt_id = #{promptId}
    </update>

    <select id="page" resultMap="dataMap">
        SELECT id,
               prompt_id,
               prompt_name,
               prompt_content,
               prompt_desc,
               create_time,
               update_time
        FROM ai_prompt
        <where>
            <if test="idKeyword != null and idKeyword != ''">
                AND prompt_id LIKE CONCAT('%', #{idKeyword}, '%')
            </if>
            <if test="nameKeyword != null and nameKeyword != ''">
                AND prompt_name LIKE CONCAT('%', #{nameKeyword}, '%')
            </if>
        </where>
        ORDER BY update_time DESC, id DESC
        <if test="offset != null and size != null">
            LIMIT #{offset}, #{size}
        </if>
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM ai_prompt
        <where>
            <if test="idKeyword != null and idKeyword != ''">
                AND prompt_id LIKE CONCAT('%', #{idKeyword}, '%')
            </if>
            <if test="nameKeyword != null and nameKeyword != ''">
                AND prompt_name LIKE CONCAT('%', #{nameKeyword}, '%')
            </if>
        </where>
    </select>

    <select id="countAll" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM ai_prompt
    </select>

    <select id="queryById" resultMap="dataMap">
        SELECT id,
               prompt_id,
               prompt_name,
               prompt_content,
               prompt_desc,
               create_time,
               update_time
        FROM ai_prompt
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.dasi.infrastructure.persistent.po.AiPrompt">
        INSERT INTO ai_prompt (prompt_id,
                               prompt_name,
                               prompt_content,
                               prompt_desc)
        VALUES (#{promptId},
                #{promptName},
                #{promptContent},
                #{promptDesc})
    </insert>

    <update id="update" parameterType="com.dasi.infrastructure.persistent.po.AiPrompt">
        UPDATE ai_prompt
        <set>
            <if test="promptId != null">prompt_id = #{promptId},</if>
            <if test="promptName != null">prompt_name = #{promptName},</if>
            <if test="promptContent != null">prompt_content = #{promptContent},</if>
            <if test="promptDesc != null">prompt_desc = #{promptDesc},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE
        FROM ai_prompt
        WHERE id = #{id}
    </delete>
</mapper>
